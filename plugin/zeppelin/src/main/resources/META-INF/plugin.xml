<!--suppress PluginXmlValidity -->
<idea-plugin>
    <id>org.jetbrains.scala.zeppelin</id>
    <name>Zeppelin Remote Run</name>
    <version>0.1</version>
    <vendor email="veoring@gmail.com" url="https://github.com/veor12">Nikita Ashikhmin</vendor>

    <description><![CDATA[
      It is an Spring Jetbrains Internship 2018 project.<br>
      It was started in snow Lappenranta.
      <em>most HTML tags may be used</em>
    ]]></description>

    <change-notes><![CDATA[
      Started.
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends optional="true" config-file="remote-run-scala-compiler.xml">org.intellij.scala</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectTemplatesFactory implementation="jetbrains.zeppelin.wizard.ZeppelinProjectTemplatesFactory"/>
        <projectConfigurable groupId="language" instance="jetbrains.zeppelin.settings.ConfigurationForm"
                             id="ZeppelinRunConfigurable" displayName="Zeppelin Remote Run"
                             nonDefaultProject="true"/>
        <toolWindow id="zeppelin-shell-toolwindow" anchor="bottom"
                    icon="/images/ZeppelinLogo.png"
                    factoryClass="jetbrains.zeppelin.ui.toolwindow.ZeppelinToolWindowFactory"/>

        <projectService serviceImplementation="jetbrains.zeppelin.settings.RemoteRunApplicationSettings"/>
    </extensions>

    <actions>
    </actions>
    <project-components>
        <component>
            <implementation-class>jetbrains.zeppelin.components.ZeppelinComponent</implementation-class>
        </component>
    </project-components>
</idea-plugin>